
@{
    ViewBag.Title = "CreateGroup";
    Layout = "../Shared/_Layout.cshtml";
}

<head>
    <script src="../../Scripts/jquery-3.3.1.js"></script>
</head>

<h2>Skapa Grupp</h2>

<body>
    <div class="container">
        <form class="form-horizontal" role="form">
            <h2 style="text-align:center">Skapa Grupp</h2>
            <div class="form-group">
                <label for="tfName" class="col-sm-3 control-label">Gruppnamn</label>
                <div class="col-sm-9">
                    <input type="text" id="tfName" placeholder="Gruppnamn" class="form-control" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3">Ïntrogrupp</label>
                <div class="col-sm-4">
                    <div class="row">
                        <div class="col-sm-3">
                            <label class="radio-inline">
                                <input type="radio" name="introGroup" id="introGroupTrue" value="true">Ja
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="introGroup" id="introGroupFalse" value="false">Nej
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="section" class="col-sm-3 control-label">Sektion</label>
                <div class="col-sm-9">
                    <select id="dropDownSections" class="form-control"></select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <input id="btnCreateGroup" class="btn btn-primary" type="button"
                           value="Skapa Grupp" onclick="CreateGroup();" />
                </div>
            </div>

            <div class="form-group">
                <div id="divError" class="alert alert-danger collapse">
                    <a id="linkClose" href="#" class="close">&times;</a>
                    <div id="divErrorText"></div>
                </div>
            </div>
        </form>
    </div>

    <script type="text/javascript" src="~/Scripts/Custom/createGroup.js"></script>
</body>